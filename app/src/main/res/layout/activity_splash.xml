<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SplashActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/BgImageView"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        app:shapeAppearanceOverlay="@style/ImageViewCircle" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:src="@drawable/git_search_foreground"
        tools:src="@drawable/git_search_foreground"
        android:layout_centerInParent="true"
        android:contentDescription="@string/logo_splash_screen" />

</RelativeLayout>